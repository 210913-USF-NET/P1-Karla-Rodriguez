        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductsId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VendorBranchesId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
